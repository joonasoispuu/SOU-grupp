<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCoordinatorAdd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddExercisesActivity">

    <EditText
        android:id="@+id/etExerciseName"
        android:layout_width="344dp"
        android:layout_height="63dp"
        android:ems="10"
        android:hint="Exercise Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <NumberPicker
        android:id="@+id/ExerciseTimePicker"
        android:layout_width="53dp"
        android:layout_height="67dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        app:layout_constraintBottom_toTopOf="@+id/etExerciseQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseName"
        app:layout_constraintVertical_bias="0.416" />

    <EditText
        android:id="@+id/etExerciseQuantity"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="345dp"
        android:ems="10"
        android:hint="How many times?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.080"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseName"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/btnNewExercise"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="OnDoneSaveExercise"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.910"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseQuantity"
        app:layout_constraintVertical_bias="0.950" />

    <Button
        android:id="@+id/btnLastNewExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseQuantity"
        app:layout_constraintVertical_bias="0.950" />

    <Button
        android:id="@+id/btnNextNewExercise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNewExercise"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toEndOf="@+id/btnLastNewExercise"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseQuantity"
        app:layout_constraintVertical_bias="0.950" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seconds"
        app:layout_constraintBottom_toTopOf="@+id/etExerciseQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.050"
        app:layout_constraintStart_toEndOf="@+id/ExerciseTimePicker"
        app:layout_constraintTop_toBottomOf="@+id/etExerciseName"
        app:layout_constraintVertical_bias="0.475" />
</androidx.constraintlayout.widget.ConstraintLayout>